                <Tab closable="false" text="Extrato">
                    <content>
                        <VBox>
                            <children>
                                <FlowPane alignment="CENTER" hgap="10.0" vgap="10.0">
                                    <children>
                                        <CheckBox mnemonicParsing="false" selected="true" text="Saques" />
