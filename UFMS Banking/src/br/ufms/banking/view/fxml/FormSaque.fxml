<ScrollPane fitToWidth="true" styleClass="formulario-saque" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufms.banking.view.controller.FormDepositoController">
    <content>
        <VBox spacing="20.0">
            <children>
                <VBox spacing="3.0">
                    <children>
                        <Label text="SIMULADOR DE SAQUES">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label text="Este formulário simula os saques realizados por este cliente nos caixas das agências." textAlignment="JUSTIFY" textFill="#3c3c3c" wrapText="true">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Separator />
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <children>
                        <Label text="INFORMAÇÕES DO SAQUE">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <FlowPane hgap="10.0" vgap="5.0">
                            <children>
                                <RadioButton mnemonicParsing="false" text="Conta Corrente" />
                                <RadioButton mnemonicParsing="false" text="Conta Poupança" />
                            </children>
                        </FlowPane>
                        <TextField alignment="CENTER" promptText="VALOR (R$)">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </TextField>
                        <PasswordField alignment="CENTER">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </PasswordField>
                        <Button mnemonicParsing="false" text="Confirmar" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </content>
<!--    <stylesheets>
        <URL value="@/br/ufms/banking/view/css/default-style.css" />
    </stylesheets>-->
</ScrollPane>
