<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufms.banking.view.controller.GridPessoaFisicaController">
    <children>
        <Label text="DADOS DO CORRENTISTA">
            <font>
                <Font name="Candara Bold" size="18.0" />
            </font>
        </Label>
        <GridPane fx:id="gridDadosCorrentista">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints minWidth="30.0" prefWidth="30.0" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="nome" promptText="Nome Completo" GridPane.columnIndex="0">
                    <GridPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                    </GridPane.margin>
                </TextField>
                <Label fx:id="nomeError" contentDisplay="GRAPHIC_ONLY" GridPane.columnIndex="1">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" visible="false">
                            <image>
                                <Image url="/br/ufms/banking/view/image/error.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip />
                    </tooltip>
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                </Label>
                <TextField fx:id="cpf" promptText="CPF" GridPane.columnIndex="2">
                    <GridPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                    </GridPane.margin>
                </TextField>
                <Label fx:id="cpfError" contentDisplay="GRAPHIC_ONLY" GridPane.columnIndex="3">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" visible="false">
                            <image>
                                <Image url="/br/ufms/banking/view/image/error.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip />
                    </tooltip>
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                </Label>
                <TextField fx:id="telefonePrincipal" promptText="Telefone Principal" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                    </GridPane.margin>
                </TextField>
                <Label fx:id="telefonePrincipalError" contentDisplay="GRAPHIC_ONLY" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" visible="false">
                            <image>
                                <Image url="/br/ufms/banking/view/image/error.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip />
                    </tooltip>
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                </Label>
                <TextField fx:id="telefoneSecundario" promptText="Telefone Secundário" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                    </GridPane.margin>
                </TextField>
                <Label fx:id="telefoneSecundarioError" contentDisplay="GRAPHIC_ONLY" GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" visible="false">
                            <image>
                                <Image url="/br/ufms/banking/view/image/error.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip />
                    </tooltip>
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                </Label>
                <TextField fx:id="usuario" promptText="Usuário" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                    </GridPane.margin>
                </TextField>
                <Label fx:id="usuarioError" contentDisplay="GRAPHIC_ONLY" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" visible="false">
                            <image>
                                <Image url="/br/ufms/banking/view/image/error.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip />
                    </tooltip>
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                </Label>
                <PasswordField fx:id="senha" promptText="Senha" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                    </GridPane.margin>
                </PasswordField>
                <Label fx:id="senhaError" contentDisplay="GRAPHIC_ONLY" GridPane.columnIndex="3" GridPane.rowIndex="2">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" visible="false">
                            <image>
                                <Image url="/br/ufms/banking/view/image/error.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip />
                    </tooltip>
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                </Label>
                <PasswordField fx:id="senhaConfirmacao" promptText="Confirme a senha" GridPane.columnIndex="2" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                    </GridPane.margin>
                </PasswordField>
                <Label fx:id="senhaConfirmacaoError" contentDisplay="GRAPHIC_ONLY" GridPane.columnIndex="3" GridPane.rowIndex="3">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" visible="false">
                            <image>
                                <Image url="/br/ufms/banking/view/image/error.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip />
                    </tooltip>
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                </Label>
                <HBox fx:id="forcaSenhaPane" alignment="CENTER_RIGHT" spacing="6.0" GridPane.rowIndex="3">
                    <children>
                        <Label text="Força da Senha">
                            <font>
                                <Font name="Candara Bold" size="12.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" maxHeight="8.0" maxWidth="150.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Pane style="-fx-background-color: red;" HBox.hgrow="ALWAYS" />
                                <Pane style="-fx-background-color: yellow;" HBox.hgrow="ALWAYS" />
                                <Pane style="-fx-background-color: green;" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                    </children>
                    <GridPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                    </GridPane.margin>
                </HBox>
            </children>
        </GridPane>
        <Separator />
    </children>
<!--    <stylesheets>
        <URL value="@/br/ufms/banking/view/css/default-style.css"/>
    </stylesheets>-->
</VBox>
