<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" styleClass="formulario-deposito" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufms.banking.view.controller.DepositoController">
    <content>
        <VBox spacing="20.0">
            <children>
                <VBox spacing="3.0">
                    <children>
                        <Label text="SIMULADOR DE DEPÓSITOS">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label text="Este formulário simula os depósitos realizados por qualquer pessoa nos caixas das agências." textAlignment="JUSTIFY" textFill="#3c3c3c" wrapText="true">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Separator />
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <children>
                        <FlowPane alignment="CENTER_LEFT" hgap="5.0">
                            <children>
                                <Label text="DEPOSITANTE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label text="(não obrigatório)" />
                            </children>
                        </FlowPane>
                        <TextField promptText="Nome Completo" />
                        <TextField promptText="Telefone" />
                        <Separator />
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <children>
                        <FlowPane alignment="CENTER_LEFT" hgap="10.0" vgap="10.0">
                            <children>
                                <Label text="FAVORECIDO">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ToggleButton mnemonicParsing="false" text="Minha Conta" />
                            </children>
                        </FlowPane>
                        <!--<Separator />-->
                        <FlowPane hgap="10.0" vgap="5.0">
                            <children>
                                <RadioButton mnemonicParsing="false" text="Conta Corrente" />
                                <RadioButton mnemonicParsing="false" text="Conta Poupança" />
                            </children>
                        </FlowPane>
                        <HBox alignment="CENTER_LEFT" spacing="3.0">
                            <children>
                                <TextField editable="false" minWidth="40.0" prefWidth="50.0" promptText="Operação" text="001" HBox.hgrow="ALWAYS" />
                                <Label text="-" />
                                <TextField minWidth="80.0" prefWidth="150.0" promptText="Número da Conta" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <TextField editable="false" focusTraversable="false" text="Nome do Favorecido" HBox.hgrow="ALWAYS" />
                        <!--                        <Separator />-->
                        <HBox spacing="10.0" style="-fx-background-color: blueviolet;" visible="true">
                            <children>
                                <Label text="Nome do Correntista" textAlignment="JUSTIFY" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                            <effect>
                                <DropShadow />
                            </effect>
                        </HBox>
                    </children>
                </VBox>
                <Separator prefWidth="200.0" />
                <VBox spacing="10.0">
                    <children>
                        <Label text="VALOR">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextField promptText="VALOR (R$)">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </TextField>
                        <Button mnemonicParsing="false" text="Confirmar" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </content>
    <stylesheets>
        <URL value="@/br/ufms/banking/view/css/default-style.css" />
    </stylesheets>
</ScrollPane>
